<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_tab_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/home_tab_bg"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home_tab_home"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:textSize="11dp" />

        <RadioButton
            android:id="@+id/rb_find"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/home_tab_find"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:textSize="11dp" />

        <RadioButton
            android:id="@+id/rb_cart"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/home_tab_shoppingcart"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:textSize="11dp" />

        <RadioButton
            android:id="@+id/rb_user"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/home_tab_user"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:textSize="11dp" />
    </RadioGroup>
</LinearLayout>
